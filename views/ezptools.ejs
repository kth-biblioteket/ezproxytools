            z-index: 10;
            display: flex;
            flex-direction: row;
            background-color: #ffffff;
            padding: 10px;
        }

        #content {
            z-index: 1;
            padding: 10px;
            display: flex;
        }

        #logfile {
            width: 100%;
        }

